<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Codemirror Test | Kyanit</title>
	<style>
		/* Set editor dimensions */
		#editor {
			height: 500px;
			width: 100%;
		}

		/* Stretch editor to fit inside its containing div */
		.cm-editor {
			height: 100%;
			width: 100%;
		}
	</style>
</head>
<body>
	<!-- Editor goes in here -->
	<div id="editor"></div>

	<!-- CodeMirror 6 -->
	<script src="/js/modules/codemirror.min.js"></script>
	<script>
		// Create an initial state for the view
		const initialState = CodeMirror.createEditorState("# Welcome to Kyanit Editor\n\nPowered by `codemirror`");
		const view = CodeMirror.createEditorView(initialState, document.getElementById("editor"));

		// Programmatically change editor contents
		view.state.doc.toString();
	</script>
</body>
</html>